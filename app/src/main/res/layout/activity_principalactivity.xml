<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principalactivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="316dp"
            android:layout_height="201dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iniciarsesion"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="          Iniciar Sesion"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etcorreo"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:hint="email@domain.com"
                android:background="@drawable/fondoblanco"
                android:textColor="@color/black"
                android:layout_gravity="center"

                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etpassword"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="**my password**"
                android:textAlignment="center"
                android:background="@drawable/fondoblanco"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btnIniciarCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10pt"
                android:drawableLeft="@drawable/iconemail"
                android:text="Iniciar con Correo" />

            <Button
                android:id="@+id/btnCrearCuenta"
                android:text="Crear Cuenta"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/iconemail"
                android:layout_marginHorizontal="10pt"
                android:layout_marginVertical="5pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btnInvitado"
                android:text="Continua como Invitado"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/invitado"
                android:layout_marginHorizontal="10pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btnGooglemain"
                android:text="Google"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/gogle"
                android:layout_marginHorizontal="10pt"
                android:layout_marginVertical="5pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvRespuestamain"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"/>


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>