<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="33pt"

            android:layout_height="2pt"
            android:background="@color/black"
            >
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2pt"
                android:text="Menu"
                android:textAlignment="center"
                android:textSize="20pt"
                android:layout_marginTop="20pt"
                android:textStyle="bold"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/fondoinicial">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnIrproductos"
                        android:background="#F5B7B1 "
                        android:layout_width="match_parent"
                        android:layout_height="100pt"
                        android:layout_marginHorizontal="6pt"
                        android:layout_marginVertical="5pt">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Productos"
                            android:textAlignment="center"
                            android:padding="3pt"
                            android:textStyle="bold"
                            android:textSize="10pt"/>
                        <ImageButton
                            android:layout_width="75pt"
                            android:layout_height="50pt"
                            android:layout_gravity="center"
                            android:background="@color/transparent"
                            android:src="@drawable/prima"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30pt"
                            android:text="Revisa el stock de productos¡Que tenemos para ti!"
                            android:layout_gravity="bottom"
                            android:padding="2pt"
                            android:textAlignment="center"/>


                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnIrPedidos"
                        android:layout_width="match_parent"
                        android:layout_height="100pt"
                        android:layout_marginVertical="5pt"
                        android:layout_marginHorizontal="6pt">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pedidos"
                            android:textAlignment="center"
                            android:padding="3pt"
                            android:textStyle="bold"
                            android:textSize="10pt"/>
                        <ImageButton
                            android:layout_width="75pt"
                            android:layout_height="50pt"
                            android:layout_gravity="center"
                            android:background="@color/transparent"
                            android:src="@drawable/pedido"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30pt"
                            android:text="Visita nuestro catalogo de productos¡Tenmos algo para ti!"
                            android:layout_gravity="bottom"
                            android:padding="2pt"
                            android:textAlignment="center"/>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    > <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnIrUsuarios"
                    android:layout_width="match_parent"
                    android:layout_height="100pt"
                    android:layout_marginHorizontal="6pt"
                    android:layout_marginVertical="5pt"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Usuarios"
                        android:textAlignment="center"
                        android:padding="3pt"
                        android:textStyle="bold"
                        android:textSize="10pt"/>
                    <ImageButton
                        android:layout_width="75pt"
                        android:layout_height="50pt"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/usuario"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30pt"
                        android:text="Usuarios utilizando la APP!"
                        android:layout_gravity="bottom"
                        android:padding="2pt"
                        android:textAlignment="center"/>


                </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnIrClientes"
                        android:layout_width="match_parent"
                        android:layout_height="100pt"
                        android:layout_marginVertical="5pt"
                        android:layout_marginHorizontal="6pt"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clientes"
                            android:textAlignment="center"
                            android:padding="3pt"
                            android:textStyle="bold"
                            android:textSize="10pt"/>
                        <ImageButton
                            android:layout_width="75pt"
                            android:layout_height="50pt"
                            android:layout_gravity="center"
                            android:background="@color/transparent"
                            android:src="@drawable/cliente"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30pt"
                            android:text="Nuestros Clientes!"
                            android:layout_gravity="bottom"
                            android:padding="2pt"
                            android:textAlignment="center"/>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="100pt"
                        android:layout_marginHorizontal="6pt"
                        android:layout_marginVertical="5pt">

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="100pt"
                        android:layout_marginVertical="5pt"
                        android:layout_marginHorizontal="6pt">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Productos"
                            android:textAlignment="center"
                            android:padding="3pt"
                            android:textStyle="bold"
                            android:textSize="10pt"/>
                        <ImageButton
                            android:layout_width="75pt"
                            android:layout_height="50pt"
                            android:background="@color/transparent"
                            android:layout_gravity="center"
                            android:src="@drawable/catalogo"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30pt"
                            android:text="Visita nuestro catalogo de productos¡Tenmos algo para ti!"
                            android:layout_gravity="bottom"
                            android:padding="2pt"
                            android:textAlignment="center"/>


                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>



        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>